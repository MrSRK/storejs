extends partials/layout
block content
	.container-fluid(data-ng-init="request.list('"+model+"')")
		h1.text-capitalize(data-ng-if="content."+model+".list")=model+'s'
		.mt-5(data-ng-if="content."+model+".list")
			.row(data-ng-clock,data-ng-if="content."+model+".list.length>0")
				.col-6.col-md-4.col-lg-3.col-xl-2.mb-4(data-ng-repeat="rec in content."+model+".list",data-ng-include="'/template/card.list.html?model="+model+"'")
				script(type='application/ld+json',data-ng-init="user.schemaListBuilder('"+model+"',content."+model+".list)",data-ng-bind="user.schema")
