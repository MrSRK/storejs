.row
	.col-12.text-right.mb-2
		strong.mr-5 Offers
		button.btn.btn-sm.btn-success(data-ng-click="content."+model+".edit[column].push({})")
			i.fas.fa-plus
.row.mb-2.px-3(data-ng-repeat="offer in content."+model+".edit[column]")
	.col-12(data-ng-class="offer.active?'bg-success':'bg-danger'")
		.row(data-ng-class="offer.active&&!offer.displayed?'bg-warning':'bg-transparent'")
			.col-4.py-2
				.form-check.mb-1
					input.form-check-input(type='checkbox',data-ng-model="offer.active")
					label.text-capitalize.form-check-label active
				.form-check.mb-1
					input.form-check-input(type='checkbox',data-ng-model="offer.displayed")
					label.text-capitalize.form-check-label displayed
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text sku
					.input-group-prepend
						label.input-group-text(data-ng-bind="content."+model+".edit['sku']+'/'")
					.input-group-prepend
						label.input-group-text(data-ng-bind="content."+model+".edit['mpn']+'-'")
					input.form-control(type='text',data-ng-model="offer.sku")
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize description
					input.form-control(type='text',data-ng-model="offer.description")
			.col-4.py-2
				strong.text-capitalize quantity
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize min
					input.form-control(type='text',data-ng-model="offer.quantity.min")
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize max
					input.form-control(type='text',data-ng-model="offer.quantity.max")
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize def
					input.form-control(type='text',data-ng-model="offer.quantity.default")
					.input-group-append
						label.input-group-text.text-capitalize step
					input.form-control(type='text',data-ng-model="offer.quantity.step")
			.col-4.py-2
				strong.text-capitalize price
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize original
					input.form-control(type='number',step="0.01",data-ng-model="offer.price.original")
					.input-group-append
						label.input-group-text.text-capitalize &euro;
				.input-group.input-group-sm.mb-1
					.input-group-prepend
						label.input-group-text.text-capitalize displayed
					input.form-control(type='number',step="0.01",data-ng-model="offer.price.displayed")
					.input-group-append
						label.input-group-text.text-capitalize &euro;
				.text-right
					button.btn.btn-sm.btn-light(data-ng-click="content."+model+".edit[column].splice($index,1)")
						i.fas.fa-trash-alt.text-danger